import java.awt.*;

public class Fakultät {
	int n=4; 
	
	public Fakultät() { 
	int y=f(n) ; 
	Label l=new Label(""+y) ; 
	add(l) ; 
	} 
	
	private void add(Label l) {
		// TODO Auto-generated method stub
		
	}

	public int f (int n){ 
	if (n==0) return 1 ; 
	else return n *f(n-1) ; // Selbstaufruf 
	}
}